<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bóng -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#999F9F9F"/> <!-- Đặt màu bóng, thay #FF0000 bằng mã màu tùy chọn -->
            <corners android:radius="8dp"/> <!-- Đặt bán kính của góc -->
        </shape>
    </item>

    <!-- Khung chứa -->
    <item android:bottom="8dp"> <!-- Điều chỉnh khoảng cách bóng đổ với khung bên dưới -->
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Đặt màu nền của khung -->
            <corners android:radius="8dp"/> <!-- Đặt bán kính của góc -->
        </shape>
    </item>

</layer-list>
