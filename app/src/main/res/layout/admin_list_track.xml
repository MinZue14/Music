<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/trackImage"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/baseline_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/trackImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonLayout"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/tvtrackID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="ID"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/tvtrackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="tên bài hát"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/tvtrackArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="ca sĩ"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/tvtrackView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="lượt xem"
            android:textSize="22dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButtonPlay"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_media_play" />

        <ImageButton
            android:id="@+id/imageButtonPause"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_media_pause" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
