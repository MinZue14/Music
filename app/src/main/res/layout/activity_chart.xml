<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/users"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--nav-bar-->
                <Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="#FDD133">

                    <ImageButton
                        android:id="@+id/btn_open_drawer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_menu"
                        android:padding="5dp"
                        android:background="#FDD133" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:layout_marginLeft="40dp"
                        android:fontFamily="@font/aclonica"
                        android:text="Nanavibe Music Player"/>
                </Toolbar>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:background="@drawable/bxh"
                        android:padding="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xu Hướng Âm Nhạc"
                        android:textSize="20sp"
                        android:padding="15sp"
                        android:textStyle="italic"/>

                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:layout_weight="1"
                        android:id="@+id/barChart"
                        android:layout_marginBottom="6dp"
                        android:padding="15sp"/>

                    <!--list ca sĩ-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20sp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nghệ sĩ nổi tiếng"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:paddingBottom="10sp"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/artistList"
                            android:orientation="horizontal"/>
                    </LinearLayout>

                    <!--list album-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="720dp"
                        android:orientation="vertical"
                        android:padding="20sp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Album hot"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:paddingBottom="10sp"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/albumList"
                            android:orientation="horizontal"/>
                    </LinearLayout>
                    <!--list nhạc-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="720dp"
                        android:orientation="vertical"
                        android:padding="20sp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bài hát nổi bật"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:paddingBottom="10sp"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/trackList"
                            android:orientation="horizontal"/>
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#DDD7D7"
                    android:padding="2sp">

                    <ImageView
                        android:id="@+id/centerImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="•••"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!--menu-->
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header_menu"
        app:menu="@menu/menu"
        android:layout_gravity="start"/>

</androidx.drawerlayout.widget.DrawerLayout>
